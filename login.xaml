<Window x:Class="Acadamy.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Acadamy"
        mc:Ignorable="d"
        Title="login" Height="181" Width="434">
    <Grid>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,103,0,0" VerticalAlignment="Top" Width="366"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Margin="327,126,0,0" VerticalAlignment="Top" Width="45" Click="signin"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="183,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernamebox" HorizontalAlignment="Left" Margin="32,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="366"/>
        <Button Content="Sign up" HorizontalAlignment="Left" Margin="73,126,0,0" VerticalAlignment="Top" Click="signup"/>
    </Grid>
</Window>
